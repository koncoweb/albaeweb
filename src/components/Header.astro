---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Beranda</HeaderLink>
			<HeaderLink href="/products">Produk</HeaderLink>
			<HeaderLink href="/about">Tentang</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://instagram.com/albae_handicraft" target="_blank">
				<span class="sr-only">Ikuti kami di Instagram</span>
